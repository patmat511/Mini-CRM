{% extends 'base.html.twig' %}

{% block title %}Employee{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Employee Details</h1>

        <div class="card shadow-sm rounded-3 mb-4">
            <div class="card-body">
                <table class="table table-hover align-middle">
                    <tbody>
                    <tr>
                        <th scope="row">Employee ID</th>
                        <td>{{ employee.employeeId }}</td>
                    </tr>
                    <tr>
                        <th scope="row">First Name</th>
                        <td>{{ employee.firstName }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Last Name</th>
                        <td>{{ employee.lastName }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Email</th>
                        <td>{{ employee.email }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Password Hash</th>
                        <td><code>{{ employee.passwordHash }}</code></td>
                    </tr>
                    <tr>
                        <th scope="row">Created At</th>
                        <td>{{ employee.createdAt ? employee.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="d-flex gap-2">
            <a href="{{ path('app_employee_index') }}" class="btn btn-secondary">Back to List</a>
            <a href="{{ path('app_employee_edit', {'employeeId': employee.employeeId}) }}" class="btn btn-primary">Edit</a>
            {{ include('employee/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
