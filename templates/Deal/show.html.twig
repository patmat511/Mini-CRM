{% extends 'base.html.twig' %}

{% block title %}Deal{% endblock %}

{% block body %}
    <h1>Deal</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>DealId</th>
                <td>{{ deal.dealId }}</td>
            </tr>
            <tr>
                <th>EmployeeId</th>
                <td>{{ deal.employeeId }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ deal.title }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ deal.amount }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ deal.createdAt ? deal.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ClosedAt</th>
                <td>{{ deal.closedAt ? deal.closedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_deal_index') }}">back to list</a>

    <a href="{{ path('app_deal_edit', {'dealId': deal.dealId}) }}">edit</a>

    {{ include('deal/_delete_form.html.twig') }}
{% endblock %}
